 <div class="container">
 <% @flats.each do |flat| %>
  <h2><%= link_to flat.name, flat_path(flat) %></h2>
    <p><%= flat.address %></p>
    <p><%= flat.description %></p>
    <p><%= flat.price_per_night %></p>
    <p><%= flat.number_of_guests %></p>
  <% end %>
  <p><%= link_to "Add new Flat", new_flat_path(@flat) %></p>
</div>
